<%- include('partials/header')%>

<section class="section">
    <div class="container">
        <h1 class="title"><%= meal.strMeal %></h1>
        <p><strong>Category:</strong> <%= meal.strCategory %></p>
        <p><strong>Origin:</strong> <%= meal.strArea %></p>
        <img src="<%= meal.strMealThumb %>" alt="<%= meal.strMeal %>" class="image" style="width: 300px;">
        
        <h2 class="subtitle">Instructions</h2>
        <p><%= meal.strInstructions %></p>
        
        <h2 class="subtitle">Ingredients</h2>
        <ul>
            <% for (let i = 1; i <= 20; i++) { %>
                <% if (meal[`strIngredient${i}`] && meal[`strMeasure${i}`]) { %>
                    <li><%= meal[`strMeasure${i}`] %> <%= meal[`strIngredient${i}`] %></li>
                <% } %>
            <% } %>
        </ul>
        
        <% if (meal.strYoutube) { %>
            <h2 class="subtitle">Video Tutorial</h2>
            <a href="<%= meal.strYoutube %>" target="_blank">Watch on YouTube</a>
        <% } %>
        
        <% if (meal.strSource) { %>
            <h2 class="subtitle">Source</h2>
            <a href="<%= meal.strSource %>" target="_blank"><%= meal.strSource %></a>
        <% } %>
    </div>
</section>

<%- include('partials/footer') %>
